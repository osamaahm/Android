<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondaryActivity"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/messageTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgborder"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/startBtn"
        android:text="Start Recording"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startRecording"/>
    <Button
        android:id="@+id/stopBtn"
        android:text="Stop Recording"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="stopRecording"/>
    <Button
        android:id="@+id/playLastRecordBtn"
        android:text="Play Last Recording"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="playLastRecord"/>
    <Button
        android:id="@+id/stopRecPlayBtn"
        android:text="Stop Playing Last Recording"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="stopPlayingLastRecord"/>
</LinearLayout>