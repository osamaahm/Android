<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Basic Practice"
        android:layout_gravity="center"
        android:textSize="30dp"/>

    <!--ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imagebutton"
        android:layout_gravity="center"/-->

    <Button
        android:id="@+id/startBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start service"
        android:textAllCaps="false"
        android:onClick="startService"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:text="Stop service"
        android:onClick="stopService"/>
    <Button
        android:id="@+id/broadcastBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom Broadcast"
        android:textAllCaps="false"
        android:onClick="broadcastIntent"/>
    <EditText
        android:id="@+id/editTxt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textAlignment="center"
        android:paddingBottom="2sp"
        android:background="@drawable/bgborder"
        />
    <EditText
        android:id="@+id/editTxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Grade"
        android:textAlignment="center"
        android:paddingBottom="2sp"
        android:background="@drawable/bgborder"
        />
    <Button
        android:id="@+id/addbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Student Info"
        android:textAllCaps="false"
        android:onClick="onClickAddName"/>
    <Button
        android:id="@+id/retriveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrive Student info"
        android:textAllCaps="false"
        android:onClick="onClickRetrive"/>
    <EditText
        android:id="@+id/editTxt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Send Data To Next Page"
        android:textAlignment="center"
        android:paddingBottom="2sp"
        android:background="@drawable/bgborder"
        />
    <Button
        android:id="@+id/sendBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Goto Next Page"
        android:textAllCaps="false"
        android:onClick="goToSecondPage"/>
</LinearLayout>